<section>
	<div class="page-wrap center-justify">
		<h1 class="font-size-2_0">Choir Revival</h1>
		<h3 class="font-size-1_2">Workshop Registration</h3>
		<br>
		<p>
			Fill out the form below to register for your spot in the Choir Revival workshop.
		</p>
	</div>
</section>
<section class="mid-blue-bg">
	<div class="page-wrap">
		<div class="form-box x-pad-1_0 y-pad-1_0 center-justify light-blue-bg border-radius-0_5">
			<h1 class="dark-blue bold">Register</h1>
			<br>
			<div class="margin-center mid-blue-bg x-pad-0_5 y-pad-0_5 inline-block border-radius-0_5">
				<div id="sign-up-in" class="border-radius-0_5">
					<div id="signup">
						<form action="/submit-info" method="POST" class="x-pad-0_5">
							<input type="text" name="first-name" placeholder="First name" value="">
							<input type="text" name="last-name" placeholder="Last name" value="">
							<input type="email" name="email" placeholder="email" value="">
							<input type="tel" name="tel" placeholder="Phone number" value="">
							<input type="text" name="church" placeholder="Churck affiliation" value="">
							<select name="set">
								<option selected>Soprano</option>
								<option>Alto</option>
								<option>Tenner</option>
								<option>Baritone/Bass</option>
								<option>Unsure</option>
							</select>
							<button>Submit</button>
						</form>
					</div>
				</div>
				<span id="err-msg">{{msg}}</span>
			</div>
		</div>
	</div>
</section>